<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/questionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите вопрос"
            android:textSize="16sp"
            android:padding="12dp"
            android:inputType="text"
            android:importantForAccessibility="yes"
            android:minHeight="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/option1EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="Вариант 1"
                android:textSize="14sp"
                android:padding="12dp"
                android:inputType="text"
                android:importantForAccessibility="yes"
                android:minHeight="48dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/option2EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="Вариант 2"
                android:textSize="14sp"
                android:padding="12dp"
                android:inputType="text"
                android:importantForAccessibility="yes"
                android:minHeight="48dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/option3EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="Вариант 3"
                android:textSize="14sp"
                android:padding="12dp"
                android:inputType="text"
                android:importantForAccessibility="yes"
                android:minHeight="48dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/option4EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="Вариант 4"
                android:textSize="14sp"
                android:padding="12dp"
                android:inputType="text"
                android:importantForAccessibility="yes"
                android:minHeight="48dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
